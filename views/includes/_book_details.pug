h1 #{bookDetail.title}

if errors
    include _errors

form(action='/books/' + bookDetail.id method='post')
    p
        label(for='title') Title
        input#title(name='title', type='text',  value= bookDetail.title)
    p
        label(for='author') Author
        input#author(name='author', type='text', value= bookDetail.author)
    p
        label(for='genre') Genre
        input#genre(type='text', name='genre', value= bookDetail.genre )
    p
        label(for='first_published') First Published
        input#first_published(type='text', name='first_published', value= bookDetail.first_published )
    p
        input(type='submit', value='Update')
h2 Loan History
table
    thead
        tr
            th Book
            th Patron
            th Loaned on
            th Return by
            th Returned on
            th Action
    tbody
        if loanDetails
            for loan in loanDetails
                tr
                    td
                        p #{bookDetail.title}
                    td
                        a(href='/patrons/' + loan.dataValues.Patron.dataValues.id) #{loan.dataValues.Patron.dataValues.first_name} #{loan.dataValues.Patron.dataValues.last_name}
                    td #{loan.dataValues.loaned_on}
                    td #{loan.dataValues.returned_on}
                    td
                    td
                        a.button(href='return_book.html') Return Book